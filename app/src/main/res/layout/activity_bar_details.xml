<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".BarDetailsActivity">

    <RelativeLayout

        android:id="@+id/headRR"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:background="#fff"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <ImageView

                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/back" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/panton_narrow_bold"
            android:text="V.I.P Nashville"
            android:textColor="@color/main_color"
            android:textSize="17sp" />

        <androidx.cardview.widget.CardView
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:id="@+id/more"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:background="#fff"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/option" />


        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <ImageView
        android:id="@+id/barImage"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/headRR"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/barreal"
        />


    <TextView
        android:id="@+id/barName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/barImage"
        android:layout_centerHorizontal="true"

        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/panton_narrow_bold"
        android:text="Raised by Wolves"
        android:textColor="@color/black"
        android:textSize="16sp" />



    <LinearLayout
        android:layout_centerHorizontal="true"
        android:id="@+id/ratingLL"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/barName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_star_24"
            />
        <TextView
            android:textColor="@color/light_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginStart="4dp"
            android:text="4.8"
            android:fontFamily="@font/panton_narrow_semibold"
            />

        <TextView
            android:textColor="#999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="|"
            android:fontFamily="@font/panton_narrow_semibold"
            />

        <ImageView
            android:layout_marginStart="6dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_outline_location_on_24"
            />
        <TextView
            android:maxLines="2"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/light_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginStart="4dp"
            android:text="233/9b Near sagar public school, Bhoapl"
            android:fontFamily="@font/panton_narrow_semibold"
            />


    </LinearLayout>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_below="@+id/ratingLL"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/descriptionHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/map"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/panton_narrow_bold"
        android:text="Description"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView

        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descriptionHead"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/panton_narrow_regular"
        android:text="Old-world decor &amp; oak-clad walls give this hidden cocktail bar a sense of mystery &amp; opulence."
        android:textColor="@color/light_gray"
        android:textSize="14sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/openWebsiteBtn"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_below="@+id/description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@color/main_color"
        app:cardCornerRadius="24dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/panton_narrow_semibold"
            android:gravity="center"
            android:text="Open Website"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </androidx.cardview.widget.CardView>
</RelativeLayout>

</ScrollView>